<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/notesCardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="false"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewNotes"
                android:minHeight="170dp"
                android:minWidth="125dp"
                android:maxHeight="170dp"
                android:maxWidth="125dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/liby_logo"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/textViewNotesTitle"
                android:layout_alignTop="@+id/imageViewNotes"
                android:layout_toEndOf="@+id/imageViewNotes"
                android:layout_marginLeft="16dp"
                android:lines="2"
                android:layout_toRightOf="@+id/imageViewNotes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Contributer"
                android:id="@+id/textViewNotesContributer"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textViewNotesTitle"
                android:lines="2"
                android:layout_alignLeft="@+id/textViewNotesTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Subject"
                android:id="@+id/textViewNotesSubject"
                android:layout_below="@+id/textViewNotesContributer"
                android:layout_alignStart="@+id/textViewNotesContributer"
                android:layout_alignLeft="@+id/textViewNotesContributer" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>