<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/searchCardViewLayout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="150dp"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_style">

            <TextView
                android:id="@+id/textViewSearchTitle"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:inputType="textMultiLine"
                android:lines="2" />

            <TextView
                android:id="@+id/textViewSearchAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/textViewSearchTitle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="textMultiLine"
                android:lines="2"
                android:text="Author"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Biblio Number"
                android:id="@+id/textViewSearchBiblioNumber"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>